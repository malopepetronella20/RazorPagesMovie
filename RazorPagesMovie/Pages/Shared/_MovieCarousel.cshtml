@model RazorPagesMovie.Models.MovieCarouselViewModel

<section class="carousel">
    <h2>@Model.Title</h2>
    <div class="movie-row">
        @foreach (var movie in Model.Movies)
        {
            <div class="movie-card">
                <img src="@movie.PosterUrl" alt="@movie.Title" />
                <p>@movie.Title</p>
            </div>
        }
    </div>
</section>
