<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "LapetroMovies") - LapetroMovies</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="/images/favicon.png" type="image/png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">LapetroMovies</a>
                <a asp-page="/About">About Us</a>


                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ManageMovies/Index">Manage Movies</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ManageTimeSlots/Index">Manage Time Slots</a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">
                                    Hello @User.Identity.Name!
                                    <small class="text-muted">
                                        (Role: @(User.IsInRole("Admin") ? "Admin" : "User"))
                                    </small>
                                </span>
                            </li>
                            <li class="nav-item">
                                <form asp-area="Identity"
                                      asp-page="/Account/Logout"
                                      asp-route-returnUrl="/"
                                      method="post"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-outline-light">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center py-3">
        &copy; 2025 - LapetroMovies -
        <a asp-page="/Privacy" class="text-light">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
