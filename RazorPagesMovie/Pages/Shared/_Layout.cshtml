<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(ViewData["Title"] ?? "LapetroMovies") - LapetroMovies</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="/images/favicon.png" type="image/png" />
</head>
<body>
    <header>
        <nav class="navbar" role="navigation">
            <a class="navbar-brand" asp-page="/Index">LapetroMovies</a>
            <div class="nav-links">
                <a asp-page="/Index">Home</a>
                <a asp-page="/Privacy">Privacy</a>
                <a asp-page="/Movies/Index">Movies</a>

                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-light">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Account/Login">Sign In</a>
                    <a asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
                }
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid">
        @RenderBody()
    </main>

    <footer>
        &copy; 2025 - LapetroMovies - <a asp-page="/Privacy" class="text-light">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
