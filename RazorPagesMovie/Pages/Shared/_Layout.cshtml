<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LapetroMovies</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" href="/images/favicon.png" type="image/png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" role="navigation">
            <a class="navbar-brand" asp-page="/Index">LapetroMovies</a>
            <div class="navbar-nav">
                <a class="nav-item nav-link" asp-page="/Index">Home</a>
                <a class="nav-item nav-link" asp-page="/Privacy">Privacy</a>
                <a class="nav-item nav-link" asp-page="/Movies/Index">Movies</a>
                <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Login">Sign In</a>
                <a class="nav-item nav-link" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid">
        @RenderBody()
    </main>

    <footer class="bg-dark text-light text-center p-3">
        &copy; 2025 - LapetroMovies - <a asp-page="/Privacy" class="text-light">Privacy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
