@page
@model RazorPagesMovie.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
    </dl>
</div>

<!-- ⭐ Average Rating -->
@if (Model.AverageRating > 0)
{
    <p>
        Average Rating:
        @for (int i = 1; i <= 5; i++)
        {
            if (i <= Math.Round(Model.AverageRating))
            {
                <span style="color: gold;">★</span>
            }
            else
            {
                <span style="color: lightgray;">★</span>
            }
        }
        (@Model.AverageRating.ToString("0.0") stars)
    </p>
}
else
{
    <p>No ratings yet.</p>
}

<!-- ⭐ Rate Button -->
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <a asp-page="./Rate" asp-route-id="@Model.Movie.Id" class="btn btn-primary">Rate this Movie</a>
}

<div class="mt-3">
    <a asp-page="./Edit" asp-route-id="@Model.Movie.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
