@page
@model RazorPagesMovie.Areas.Identity.Pages.Account.RegisterModel
@{
    Layout = "/Pages/Shared/_LayoutIdentity.cshtml";
    ViewData["Title"] = "Register";
}

<div class="text-center text-light mt-5">
    <h2 class="text-pink">Register</h2>
    <p>Create a new account.</p>
</div>

<form method="post" class="mt-4 mx-auto" style="max-width: 400px;">
    <div class="form-group">
        <label asp-for="Input.Email" class="text-light"></label>
        <input asp-for="Input.Email" class="form-control bg-dark text-light border-pink" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password" class="text-light"></label>
        <input asp-for="Input.Password" class="form-control bg-dark text-light border-pink" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="text-light"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control bg-dark text-light border-pink" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-pink btn-block">Register</button>
</form>

<div class="mt-3 text-center">
    <a asp-page="./Login" class="text-pink">Already have an account? Sign in</a>
</div>
