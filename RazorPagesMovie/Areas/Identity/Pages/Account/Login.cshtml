@page
@model LapetroMovies.Areas.Identity.Pages.Account.LoginModel
@{
    Layout = "/Pages/Shared/_LayoutIdentity.cshtml"; // ✅ Use your custom layout
    ViewData["Title"] = "Login";
}

<div class="text-center text-light mt-5">
    <h2 class="text-pink">Sign In</h2>
</div>

<form method="post" class="mt-4 mx-auto" style="max-width: 400px;">
    <div class="form-group">
        <label asp-for="Input.Email" class="text-light"></label>
        <input asp-for="Input.Email" class="form-control bg-dark text-light border-pink" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password" class="text-light"></label>
        <input asp-for="Input.Password" class="form-control bg-dark text-light border-pink" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Input.RememberMe" class="form-check-input" />
        <label asp-for="Input.RememberMe" class="form-check-label text-light"></label>
    </div>

    <button type="submit" class="btn btn-pink btn-block">Login</button>
</form>

<div class="mt-3 text-center">
    <a asp-page="./Register" class="text-pink">Don’t have an account? Sign up</a>
</div>
